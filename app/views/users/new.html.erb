<div class="center hero-unit">
<% provide(:title, 'Sign up') %>
<h3>Sign up</h3>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :guac %>
      <%= f.check_box :guac, {:class => "guac"} %>

      <%= f.label :beer %>
      <%= f.check_box :beer, {:class => "beer"} %>

      <br>
      <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>


<div class="center hero-unit">  
  <h3>
    Contact
  </h3>

  <h4 id="instructions">
    <p>
      Questions? Call or tweets <%= link_to "@lspray", "https://twitter.com/lspray" %></li>
    </p>
</div>